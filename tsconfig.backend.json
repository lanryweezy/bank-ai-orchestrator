{
  "extends": "./tsconfig.json",
  "compilerOptions": {
    "baseUrl": "./backend/src",
    "outDir": "./dist/backend",
    "target": "ES2020",
    "module": "commonjs",
    "lib": ["ES2020"],
    "paths": {
      "@/*": ["*"],
      "@config/*": ["config/*"],
      "@utils/*": ["utils/*"],
      "@services/*": ["services/*"],
      "@api/*": ["api/*"]
    },
    "allowSyntheticDefaultImports": true,
    "esModuleInterop": true,
    "skipLibCheck": true,
    "strict": false,
    "noImplicitAny": false
  },
  "include": [
    "backend/src/**/*.ts"
  ],
  "exclude": [
    "backend/src/**/*.test.ts",
    "backend/src/**/*.spec.ts",
    "node_modules",
    "dist"
  ]
}

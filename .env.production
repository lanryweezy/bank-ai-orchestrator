# Production Environment Variables for Vercel
# Copy these to your Vercel environment variables dashboard

# Database Configuration (Required)
DATABASE_URL=postgresql://username:password@host:port/database
POSTGRES_USER=your_postgres_user
POSTGRES_PASSWORD=your_postgres_password
POSTGRES_DB=banking_app
POSTGRES_HOST=your_postgres_host
POSTGRES_PORT=5432

# Authentication (Required)
JWT_SECRET=your-super-secret-jwt-key-at-least-32-characters-long
AUTH_SECRET=your-super-secret-auth-key-at-least-32-characters-long

# Application Configuration
NODE_ENV=production
PORT=3001

# CORS Configuration
FRONTEND_URL=https://your-app.vercel.app

# Database SSL (for production databases)
POSTGRES_SSL=true

# Banking API Keys (Optional - for integrations)
PAYSTACK_SECRET_KEY=sk_live_xxxxx
FLUTTERWAVE_SECRET_KEY=FLWSECK_xxxxx
BVN_VERIFICATION_API_KEY=your_bvn_api_key

# Email Configuration (Optional)
SMTP_HOST=smtp.gmail.com
SMTP_PORT=587
SMTP_USER=your-email@gmail.com
SMTP_PASS=your-app-password
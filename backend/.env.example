# PostgreSQL Database Configuration
DB_USER=your_db_user
DB_HOST=localhost
DB_NAME=bank_db
DB_PASSWORD=your_db_password
DB_PORT=5432

# JWT Configuration
JWT_SECRET=replace_with_a_very_strong_random_secret_key
JWT_EXPIRES_IN_SECONDS=3600 # e.g., 3600 for 1h, 86400 for 1d

# Server Configuration
BACKEND_PORT=3001
NODE_ENV=development # or production

# Bank Specific Configuration (for modularity)
BANK_NAME="My Awesome Bank"
DEFAULT_CURRENCY="USD" # (e.g., USD, EUR, CAD)
DEFAULT_TIMEZONE="UTC" # (e.g., "America/New_York", "Europe/London")
ENABLE_ACCOUNT_OPENING_FEE=false
ACCOUNT_OPENING_FEE=25.00 # Amount if fee is enabled
ACCOUNT_NUMBER_STRATEGY="default_sequential" # Options: default_sequential, random_numeric (example)
